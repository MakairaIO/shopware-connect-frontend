{% block component_filter_multi_select_list_item %}        
    <div class="form-check">
    {% set id = element.key %}
    {% set name = element.key %}
    {% set cnt = element.count %}

    
        <input type="checkbox"
                class="form-check-input filter-multi-select-checkbox"
                data-label="{{ name }}"
                value="{{ id }}"
                id="{{ id }}">      
    
        <label class="filter-multi-select-item-label form-check-label" for="{{ id }}">
            {% block component_multi_select_list_item_label %}
                {{ name }} ({{cnt}})
            {% endblock %}
        </label>
    </div>

{% endblock %}



